# ===========================================
# ClearMind AI — Environment Configuration
# ===========================================

# --- Core (Required) ---
DATABASE_URL=postgresql://user:password@localhost:5432/clearmind
SESSION_SECRET=change-me-to-a-random-string
GROQ_API_KEY=gsk_your_groq_api_key_here
PORT=3000
NODE_ENV=development

# --- LLM Provider (groq or gemini) ---
DEFAULT_LLM_PROVIDER=groq

# --- Google Gemini (Optional — needed if using Gemini provider) ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- Microsoft Azure AD (Optional — set ENABLE_AZURE_AUTH=true to activate) ---
ENABLE_AZURE_AUTH=false
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_AUDIENCE=api://your-client-id

# --- Microsoft Graph API (Optional — set ENABLE_GRAPH_INTEGRATION=true to activate) ---
ENABLE_GRAPH_INTEGRATION=false
# Uses AZURE_CLIENT_ID/SECRET above for app-level Graph API calls

# --- Dataverse Sync (Optional — set ENABLE_DATAVERSE_SYNC=true to activate) ---
ENABLE_DATAVERSE_SYNC=false
DATAVERSE_URL=https://your-org.crm.dynamics.com
DATAVERSE_TABLE_NAME=cr_journalentries

# --- Power Automate Webhooks (Optional — set ENABLE_WEBHOOKS=true to activate) ---
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your-hmac-secret-key
